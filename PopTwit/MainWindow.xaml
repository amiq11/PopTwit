<Window x:Class="PopTwit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="300">
    <Grid Width="300" Height="100">
        <StackPanel Orientation="Horizontal" Width="300" Height="100">
            <TextBox x:Name="TweetBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Height="90" Margin="0,5" ToolTip="Type your tweet!"/>
            <Button Content="Tweet" VerticalAlignment="Center" Width="75" Click="clickedTweetButton" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>