<Window x:Class="PopTwit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PopTwit" Height="150" Width="300"
        xmlns:poptwit="clr-namespace:PopTwit">
    <!--<WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="{x:Static SystemParameters.CaptionHeight}"
                      ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" />
    </WindowChrome.WindowChrome>-->
    <Window.InputBindings>
        <KeyBinding Command="{x:Static poptwit:MainWindow.TweetCmd}" Key="Enter" Modifiers="Control"/>
    </Window.InputBindings>
    <Grid Width="300" Height="100">
        <StackPanel Orientation="Horizontal" Width="300" Height="100">
            <TextBox x:Name="TweetBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" Height="90" Margin="0,5" ToolTip="Type your tweet!"/>
            <Button Content="Tweet" VerticalAlignment="Center" Width="75" Command="{x:Static poptwit:MainWindow.TweetCmd}" HorizontalAlignment="Left" Margin="10,40,0,40"/>
        </StackPanel>
    </Grid>
</Window>